<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head') %>

<body>

<%- include('./partials/header')%>

    <main>

        <div class="zapatillas">

            <div class="zapatillas_izq">
                <img src="/images/<%= productDetail.codigo %>.jpg" alt="<%= productDetail.nombre %>">

                <div class="imagenes_galeria">
                    <img src="/images/<%= productDetail.codigo %>.jpg" alt="<%= productDetail.nombre %>">
                    <img src="/images/<%= productDetail.codigo %>.jpg" alt="<%= productDetail.nombre %>">
                    <img src="/images/<%= productDetail.codigo %>.jpg" alt="<%= productDetail.nombre %>">
                    <img src="/images/<%= productDetail.codigo %>.jpg" alt="<%= productDetail.nombre %>">
                </div>
            </div>

            <div class="zapatillas_der">
                <!-- titulo -->
                <h1><%= productDetail.nombre %></h1>
                <!-- precio -->
                <h2>$ <%= productDetail.precio %></h2>
                <!-- cuotas -->
                <div class="detalles_zapatillas">
                    <i class="fas fa-credit-card"></i>
                    6 CUOTAS SIN INTERES DE <span class="info_negrita">$ 2.499,83</span> 
                </div>
                <!-- envio -->
                <div class="detalles_zapatillas">
                    <i class="fas fa-truck"></i>
                    RECIBÍ TU COMPRA ENTRE EL <span class="info_negrita">23 / 26</span> 
                </div>
                <!-- stock -->
                <div class="detalles_zapatillas_alerta">
                    <i class="fas fa-exclamation-triangle"></i>
                ¡Solo quedan 3 en stock!
                </div>
                <!-- talles -->
                <br> 
                <span class="info_negrita">Talles:</span>
                <div class="talles">
                
                    <div class="circulo_talles">37</div>
                    <div class="circulo_talles">39</div>
                    <div class="circulo_talles">44</div>
                </div>
                
                <div class="boton_alcarrito">AÑADIR AL CARRITO</div>
                
            </div>

        </div>
        

        <!-- INFORMACION -->
        <h2>+ Información</h2>
        <div class="informacion">
            <p>
            <span class="info_negrita">Descripcion:</span>
            <%= productDetail.descripcion %>
            </p>
            <ul>
                <li><span class="info_negrita">Genero:</span><%= productDetail.genero %></li>
                <li><span class="info_negrita">Adecuado para:</span>Todo el dia</li>
                <li><span class="info_negrita">Caña:</span>Baja</li>
                <li><span class="info_negrita">Ajuste:</span>Con cordones</li>
                <li><span class="info_negrita">Origen:</span><%= productDetail.origen %></li>
                <li><span class="info_negrita">Marca:</span><%= productDetail.marca %></li>
                <li><span class="info_negrita">Material:</span>Cuero</li>
            </ul>
        
        </div>
        
        
        <h2>Recomendados para vos</h2>
        <%- include('./partials/productDetailBox')%>
        

    </main>

    <%- include('./partials/footer')%>

</body>
</html>