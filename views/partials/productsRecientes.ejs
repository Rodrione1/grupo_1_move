

        <!-- estilos en... styles-productDetail.css -->
        <div class="recomendados">

            <% for(let i=0; i< productsRecientes.length ; i++) { 
                
                // si hay o no imagen de producto...
                let productImage;
                if (productsRecientes[i].image) {
                    productImage = "products/" + productsRecientes[i].image;
                } else {
                    productImage = "noimage.jpg";
                } 
                // --------------------------------

            %>
            <a href="/zapatillas/id/<%= productsRecientes[i].id %>">
            <div class="imagen_texto">

                <div class="imagen">
                    <img src="/images/<%= productImage %>" alt="<%= productsRecientes[i].name %>" class="imgZapatilla">
                    
                        <div onclick="event.preventDefault(); like('<%= productsRecientes[i].id %>');">
                            <i class="fas fa-heart <%= arrayFav.includes(productsRecientes[i].id) ? 'active-fav' : ''  %>" id="heart<%= productsRecientes[i].id %>"></i>
                        </div>

                        <% 
                        if(productsRecientes[i].discount > 0){
                        %> 
                        <img src="/images/dto.png"  alt="descuento" class="imgDescuento">
                        <span class="txtDescuento"><%= productsRecientes[i].discount + '%' %></span>
                        <% 
                        }
                        %>
                        
                </div>
                <hr>
                
                <div class="texto"> 
                    <strong>
                    <%= productsRecientes[i].brands.name.toUpperCase() + ' // '+ productsRecientes[i].name %>
                    </strong> 
                    <br><br>
                    <% 
                    if(productsRecientes[i].discount > 0){
                        let valorDto = productsRecientes[i].price * ( productsRecientes[i].discount / 100 );
                        let precioFinal = productsRecientes[i].price - valorDto;
                    %> 
                    <h3 >
                        <span class="tachado">$<%= productsRecientes[i].price.toLocaleString() %></span> 
                        <span class="textoRojo">$<%= precioFinal.toLocaleString() %></span> 
                    </h3> 
                    <% 
                    }else{
                    %>
                    <h3>$<%= productsRecientes[i].price.toLocaleString() %></h3> 
                    <% 
                    }
                    %>
                </div>

                <button class="buttonAnadir">Ver articulo </button>

            </div>
            </a>
            <% } %>

        </div>