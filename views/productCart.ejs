<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>

    <%- include('./partials/header')%>

    <main>
 
    <style>
        /* ************** */
        /* FLEXBOX */
        /* ************** */

        .contInfoResumen{
            display: flex;
            flex-wrap: wrap;
            max-width: 1200px;
            margin: auto;
            margin-top: 30px;
            margin-bottom: 50px;
            align-items: flex-start;
            background-color: #FFC842;
            
            
        }

        .izqInfo{
            margin: auto;
            background-color: aqua;
        }
        .derResumen{
            display: flex;
            flex-direction: column;
            background-color: aquamarine;
            margin-top: 30px;
            width: 300px;
            margin-left: auto;
            margin-right: auto;
        }

    /* ************** */
    /* RESUMEN */
    /* ************** */
    .der_resumen{
        border-bottom: 2px solid black;
        margin-bottom: 15px;
        padding-bottom: 10px;
    }
    .der_row{
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;

    }

    .botonComprar{
        padding: 10px;
        margin-bottom: 10px;
        background-color: black;
        color: white;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;
    }

    .botonSeguirViendo{
        padding: 10px;
        margin-bottom: 10px;
        background-color: white;
        color: black;
        border-radius: 5px;
        width: 100%;
        cursor: pointer;

    }

    /* ************** */
    /* TABLA */
    /* ref... 
       https://www.cssscript.com/pure-html5css-responsive-table-solution/ */
    /* ************** */
 
    td, th { padding: 8px; padding: .5rem;
    }
    
    th {
      text-align: center;
      
    }
    
    
    .table {
      width: 100%;
      padding: 16px;
      padding: 1rem;
    }
    
    .table__heading { border-bottom: 2px solid #FFC842; }

    
     @media (max-width: 32rem) {



     .table__heading {
    display: none;
    }
     .table__content {
     display: block;
     padding: .5rem 0;
    }
     .table__row {
     margin: .25rem 1rem;
     padding: .5rem 0;
     display: block;
     border-bottom: 2px solid #FFC842;
    }
     .table__content:before {
     content: attr(data-heading);
     display: inline-block;
     width: 5rem;
     margin-right: .5rem;
     color: #999;
     font-size: .75rem;
     font-weight: 700;
     text-transform: uppercase;
     letter-spacing: 2px;
    }

    td{
        text-align: left;
    }

    

    }


    .hideRow{
        display: none;
    }


    
    </style>


<script>
    function plusValue(id)
    {
        var value = parseInt(document.getElementById('number' + id).value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('number' + id).value = value;
    }

    function minusValue(id)
    {
        var value = parseInt(document.getElementById('number' + id).value, 10);
        if(value > 1){
            value = isNaN(value) ? 0 : value;
            value--;
            document.getElementById('number' + id).value = value;
        }

    }

    function deleteRow(id)
    {
        var element = document.getElementById('row' + id);
        element.classList.add("hideRow");

    }


    /* Vaciar el carrito */
    function deleteCarrito(){
            localStorage.removeItem('cart');
            localStorage.removeItem('cartConteo');
            
    }


</script>



    <div class="contInfoResumen">

        <div class="izqInfo">
            <!-- ******************************* -->
            
    <table class="table">
        <tr>
          <th class="table__heading">Producto</th>
          <th class="table__heading">Precio</th>
          <th class="table__heading">Cantidad</th>
          <th class="table__heading">Subtotal</th>
          <th class="table__heading" style="width: 100px;"><i class="fas fa-trash"></i></th>

        </tr>

        <tr class="table__row" id="row1">
          <td class="table__content" data-heading="Producto">Gizmo1</td>
          <td class="table__content" data-heading="Precio">Robot</td>
          <td class="table__content" data-heading="Cantidad">
            <button onclick="minusValue(1)" >-</button>
            <input type="text" id="number1" value="0"/>
            <button onclick="plusValue(1)" >+</button>
          </td>
          <td class="table__content" data-heading="Subtotal">A+</td>
        
          <td class="table__content" data-heading="Borrar">
            <button onclick="deleteRow(1)" >x</button>
          </td>

        </tr>

        <tr class="table__row" id="row2">
            <td class="table__content" data-heading="Name">Gizmo2</td>
            <td class="table__content" data-heading="Type">Robot</td>
            <td class="table__content" data-heading="Grade">

                <button onclick="minusValue(2)" >-</button>
                <input type="text" id="number2" value="0"/>
                <button onclick="plusValue(2)" >+</button>

            </td>
            <td class="table__content" data-heading="Grade">A+</td>
            <td class="table__content" data-heading="Borrar">
                <button onclick="deleteRow(2)" >x</button>
            </td>
          
        </tr>

        

          <tr class="table__row">
       
            <td class="table__content" colspan="5" style="text-align: right;">
                    <a href="" onclick="deleteCarrito()">
                        <strong>(vaciar carrito)</strong> 
                    </a>    
            </td>
          </tr>

          
      </table>



            <!-- ******************************* -->
        </div>

        <div class="derResumen">
            
            <div class="der_resumen">
                <strong>RESUMEN DEL PEDIDO</strong>
                
            </div>
            
            <div class="der_row">
                <div>Total:</div>
                <div>$16.999,00</div>
            </div>
           
            <a href="">
                <button class="botonComprar">COMPRAR</button>
            </a>
            <a href="/zapatillas">
                <button class="botonSeguirViendo">SEGUIR VIENDO</button>
            </a>

            
        </div>

    </div>


    <div id="demo"></div>

    <!-- **************************************** -->
    </main>

    <%- include('./partials/footer')%>

</body>
</html>