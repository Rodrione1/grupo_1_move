                    <% if (locals.errors && errors.genero) { %>
                        <div style="color: red"> 
                        <%= errors.genero.msg%>
                        </div>
                      <% } %>

                    <label name="email">Ingresar email<hr></label>
                    <input name="email" id="email">
                    <% if (locals.errors && errors.email) { %>
                        <div style="color: red"> 
                        <%= errors.email.msg%>
                        </div>
                      <% } %>

                    <label for="contraseña">Elegí tu contraseña<hr></label>
                    <input type="password" name="password" id="contraseña">
                    <% if (locals.errors && errors.password) { %>
                        <div style="color: red"> 
                        <%= errors.password.msg%>
                        </div>
                      <% } %>

                    <div id="politicas">
                        <input type="checkbox" name="politicas" id="politicas">
                        <label for="politicas">Acepto las politicas de privacidad, terminos y condiciones</label>
                    </div>
    
                    <div id="promociones">
                        <input type="checkbox" name="promocoiones" id="promociones">
                        <label for="promociones">Quiero recibir emails de promociones y noticias</label>
                    </div>
    
                    <label for="profileImage">Imagen de perfil:</label>
                    <input type="file" name="profileImage" id="image">
                    <% if (locals.errors && errors.profileImage) { %>
                      <div style="color: red"> 
                      <%= errors.profileImage.msg%>
                      </div>
                    <% } %>
    
                    <button type= "submit" id="crearcuenta" style="color: #fff;">
