        <article class="todoslosforms">

                <form class="datospersona" action="/users/register" method="post" name="registrousuario" enctype="multipart/form-data">

                    <label for="nombre">Nombre <hr></label>
                    <input name="name" id="nombre" >
                    <% if (locals.errors && errors.name) { %>
                        <div style="color: red"> 
                        <%= errors.name.msg%>
                        </div>
                      <% } %>

                    <label for="apellido">Apellido<hr></label>
                    <input name="last_name" id="apellido">
